#include<stdio.h>
#include<conio.h>
void main()
{
    int a,b;
    char op;
    printf("enter a value of a:");
    scanf("%d",&a);
    printf("enter a value of b:");
    scanf("%d",&b);
    printf("enter a operator:");
    scanf("\n%c",&op);
    if(op=='+')
    {
        printf("sum=%d",a+b);
    }
    else if(op=='-')
    {
        printf("diff=%d",a-b);
    }
    else if(op=='*')
    {
        printf("multi=%d",a*b);
    }
    else if(op=='/')
    {
        printf("divi=%d",a/b);
    }
    else
    {
        printf("invalid operator ");
    }
    getch();
    
}
